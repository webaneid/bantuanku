{
  "name": "bantuanku",
  "private": true,
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "dev:api": "npm run dev -w apps/api",
    "dev:web": "npm run dev -w apps/web",
    "dev:admin": "npm run dev -w apps/admin",
    "build": "npm run build --workspaces --if-present",
    "start:api": "npm run start -w apps/api",
    "start:web": "npm run start -w apps/web",
    "start:admin": "npm run start -w apps/admin",
    "db:generate": "npm run db:generate -w packages/db",
    "db:migrate": "npm run db:migrate -w packages/db",
    "db:push": "npm run db:push -w packages/db",
    "db:studio": "npm run db:studio -w packages/db",
    "db:manifest:run": "npm run manifest:run -w packages/db",
    "db:manifest:run:fresh": "npm run manifest:run:fresh -w packages/db",
    "db:manifest:run:dry": "npm run manifest:run:dry -w packages/db"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
